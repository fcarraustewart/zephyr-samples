/*
*	ESP32 https://zephyrproject.org/how-to-set-up-esp32-gpio-pins-in-zephyr-rtos/
*	GPIO0..GPIO31 → port &gpio0, pins 0..31
*	GPIO32..GPIO39 → port &gpio1, pins 0..7
*/
/ {
	aliases {
		/* On ESP32-C3, only GPIO0~5 can be used
		 * as wake-up sources
		 */
    
		gnss = &gnssdev;
    };

	gpio_keys {
		compatible = "gpio-keys";
		status = "okay";
	};

    chosen {
        zephyr,console = &usb_serial;
        zephyr,shell-uart = &usb_serial;
    };
};

&i2c0 {
	status = "okay";
	bme688: bme688@76 {
		compatible = "bosch,bme688";
		reg = <0x76>;
		label = "BME688";
		status = "okay";
	};

};

&pinctrl {
	i2c0_default: i2c0_default {
		group1 {
			pinmux = <I2C0_SDA_GPIO8>,
				 <I2C0_SCL_GPIO9>;
		};
	};
};

&usb_serial {
    status = "okay";
};

&uart1 {
	status = "okay";
	current-speed = <9600>;
	pinctrl-0 = <&uart1_pins>;
	pinctrl-names = "default";
	gnssdev: gnss-nmea-generic {
			compatible = "gnss-nmea-generic";
	};
};

&pinctrl {
	uart1_pins: uart1_pins {
		group1 {
			pinmux = <UART1_TX_GPIO5>;
			output-high;
		};
		group2 {
			pinmux = <UART1_RX_GPIO6>;
			bias-pull-up;
		};
	};
};

